@model FinalProject.Models.HomeViewModel

<html>

    <head>
        <link href="~/Styles/Home.css" rel="stylesheet" />
        <title>Final Project</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <body>
        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/jquery-ui.min.js"></script>
        <script src="~/Scripts/Home.js"></script>
        
        <div class="home">

            <div id="header">Welcome to Cuyahoga Community College Student Services Online</div>
            <br />
            <div id="header-para">Cuyahoga Community College recognizes students' rights to access personal and academic records
            in accordance with the Family Educational Rights and Privacy Act of 1974 (FERPA) as amended by
            Public Law 93-568.</div>

        </div>
        <br />
        <div class="main">
        <div class="content">

            <table>
                <tr>
                    <td class="tdleft">Already have an account with us?
                    Returning users may log in by entering
                    their site username and password.
                    </td>
                    <td class="tdright">
                    <div class="logerror"></div>
                    Username &nbsp;<input type="text" name="username" class="username" size="20"><br />
                    Password &nbsp;<input type="text" name="password" class="password" size="20"><br />
                    <input type="button" class="logbutton" value="Log In"></td>
                </tr>                
                <tr>
                    <td colspan="2">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td class="tdleft">New users, please create a
                    new account by providing us
                    with some basic information.
                    </td>
                    <td class="tdright">
                    <div class="createrr"></div>
                    Username &nbsp;<input type="text" name="crusername" class="crusername" size="20"><br />
                    Password &nbsp;<input type="text" name="crpassword" class="crpassword" size="20"><br />
                    E-Mail Address &nbsp;<input type="text" name="email" class="email" size="20"><br />
                    Repeat E-Mail Address &nbsp;<input type="text" name="repemail" class="repemail" size="20"><br />
                    <input type="button" class="crbutton" value="Create Account"></td>
                </tr>
            </table>

        </div>
        <div class="output">

            <table>
                <tr>
                    <td class="tdinfohead">
                        AccountName
                        EmailAddress
                        CurrentGPA
                    </td>
                    <td class="tdinfo">
                        <input type="text" name="infousername" class="infousername" size="15"><br />
                        <input type="text" name="infoemail" class="infoemail" size="15">&nbsp;<input type="button" class="upemlbutton" value="Update"><br />
                        <input type="text" name="infoGPA" class="infoGPA" size="15">&nbsp;<input type="button" class="upgpabutton" value="Update">
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td class="tdinfohead">
                        Element Name &nbsp;
                        Element Value &nbsp;<br />
                        &nbsp;
                    </td>
                    <td colspan="2" class="upelement">
                        <div class="elemerror"></div>
                        <input type="text" name="elemname" class="elemname" size="20"><br />
                        <input type="text" name="elempassword" class="elemval" size="20"><br />
                        <input type="button" class="upbutton" value="Add">
                    </td>
                </tr>
            </table>
        </div>
            </div>
        <br />
        <div class="footer">Cuyahoga Community College <br />700 Carnegie Avenue, Cleveland, Ohio 44115
        </div>
    </body>

</html>